<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <ScrollView android:id="@+id/settingsScrollView"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1">
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			android:orientation="vertical" android:layout_width="fill_parent"
			android:layout_height="fill_parent">
	<LinearLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:layout_width="fill_parent"
	  android:layout_height="80dip"
	  android:orientation="horizontal"
	  android:layout_gravity="center" >
		<ImageView
			android:src="@drawable/dc_logo"
			android:layout_height="60dip"
			android:layout_width="80dip"
			android:layout_centerInParent="true" 
			android:layout_gravity="center"/>
		  <TextView
		    android:gravity="center_vertical"
		    android:layout_gravity="center_vertical"
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:textSize="30dp"
		    android:textStyle="bold"
		    android:text="@string/main_menu_message" /> 
	</LinearLayout>
	
	<Button android:id="@+id/take_quiz_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/take_quiz_btn_text" 
            android:textSize="20dp"
            android:textStyle="bold" 
            android:layout_margin="5dp"
            />
		
    <Button android:id="@+id/results_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/results_btn_text" 
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="5dp" 
            />
            
    <Button android:id="@+id/submit_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/submit_btn_text" 
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="5dp" 
            />
            
    <Button android:id="@+id/manage_quiz_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/manage_quiz_btn_text" 
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="5dp" 
            />
    </LinearLayout>
    </ScrollView>
</LinearLayout>
