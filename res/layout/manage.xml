<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="vertical">
	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:id="@+id/top_control_bar">
		<TextView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:gravity="left"
				android:textSize="20sp" android:layout_margin="10dp" android:text="@string/title_manage_quiz" />
	</RelativeLayout>
	<LinearLayout android:id="@+id/bottom_control_bar"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_alignParentBottom="true">
		<Button android:id="@+id/listquizBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/list_quiz_btn_text" 
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="10dp" 
            android:layout_weight=".5"
            />
		<Button android:id="@+id/homeBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_btn" 
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="10dp" 
            android:layout_weight=".5"
            />
	</LinearLayout>
	<ListView android:id="@android:id/android:list" android:layout_width="fill_parent"
		android:layout_height="0dip" android:choiceMode="multipleChoice"
		android:layout_below="@id/top_control_bar" android:layout_above="@id/bottom_control_bar"></ListView>
	<TextView android:id="@android:id/empty" android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@id/top_control_bar" android:layout_above="@id/bottom_control_bar" />
</RelativeLayout>
